Trig := {
  sin: fn(s, c) s.add(sin(_ioarg(s, c, 0, _intOrFloat)))
  qsin: fn(s, c) s.add(sin(s.pop()))

  cos: fn(s, c) s.add(cos(_ioarg(s, c, 0, _intOrFloat)))
  qcos: fn(s, c) s.add(cos(s.pop()))

