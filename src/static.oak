  ) |> s.add()

  // ---

  hklshift: fn(s, c) hkmlt(
    _ioarg(s, c, 0, _intOrFloat)
    _hkpow(
      2
      _ioarg(s, c, 1, _intOrFloat)
    )
  ) |> s.add()

  qhklshift: fn(s, c) hkmlt(
    s.pop()
    _hkpow(2, s.pop())
  ) |> s.add()

  hkrshift: fn(s, c) hkdiv(
    _ioarg(s, c, 0, _intOrFloat)
